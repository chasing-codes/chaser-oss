{
  "manifest_version": 3,
  "name": "Chaser OSS",
  "description": "Open-source chrome extension for claiming Stake.com bonuses and reloads using your existing browser session.",
  "version": "0.1.0",
  "minimum_chrome_version": "110",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://stake.com/*",
    "https://pub.chasing.codes/*",
    "https://challenges.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [],
  "content_scripts": [
    {
      "matches": ["https://stake.com/*"],
      "js": ["content/content.js", "content/ui.js"],
      "run_at": "document_idle"
    }
  ]
}
